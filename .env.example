# ===========================================
# HR Chatbot - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# --- LLM Provider (Chat Model) ---
LLM_PROVIDER=openai                    # openai | anthropic
LLM_API_KEY=sk-your-openai-key-here    # API key for the chat model
LLM_MODEL=gpt-4o-mini                  # Chat model name

# --- Embedding Provider ---
EMBEDDING_PROVIDER=local               # local | openai
EMBEDDING_MODEL=Xenova/all-MiniLM-L6-v2  # Local: HuggingFace model name | OpenAI: text-embedding-3-small
EMBEDDING_API_KEY=                     # Only needed for openai provider (if blank, uses LLM_API_KEY)
EMBEDDING_CACHE_PATH=./storage/models  # Where to store downloaded models

# --- Vector Store ---
VECTOR_STORE=memory                    # memory | hnswlib
VECTOR_STORE_PERSIST_PATH=./storage/vector-data  # Path for hnswlib persistence

# --- RAG Settings ---
RAG_CHUNK_SIZE=1000                    # Characters per chunk
RAG_CHUNK_OVERLAP=200                  # Overlap between chunks
RAG_TOP_K=4                            # Number of chunks to retrieve
RAG_DOCUMENTS_PATH=./storage/documents # Path to document files

# --- External HR API ---
HR_API_MODE=mock                       # mock | real
HR_API_BASE_URL=                       # Base URL for real HR API (when mode=real)

# --- Server ---
PORT=3000
NODE_ENV=development
